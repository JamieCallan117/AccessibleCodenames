<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_options">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="627dp"
        android:layout_marginRight="627dp"
        android:layout_marginBottom="353dp"
        android:onClick="backButton"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/gameOptionsTitle"
        android:layout_width="667dp"
        android:layout_height="101dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="268dp"
        android:ems="10"
        android:fontFamily="@font/title_font"
        android:gravity="center_horizontal"
        android:text="Game Options"
        android:textSize="74sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameOptionsSubtitle"
        android:layout_width="175dp"
        android:layout_height="44dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="241dp"
        android:ems="10"
        android:fontFamily="@font/title_font"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/gameOptionsTitle"
        app:layout_constraintTop_toBottomOf="@+id/gameOptionsTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/boardOptionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:text="Board Options"
        app:layout_constraintEnd_toStartOf="@+id/teamOptionsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOptionsTitle" />

    <TextView
        android:id="@+id/teamOptionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="40dp"
        android:text="Team Options"
        app:layout_constraintStart_toEndOf="@+id/boardOptionsText"
        app:layout_constraintTop_toBottomOf="@+id/gameOptionsTitle" />

    <TextView
        android:id="@+id/customWordsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="Custom Words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teamOptionsText"
        app:layout_constraintTop_toBottomOf="@+id/gameOptionsSubtitle" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="150dp"
        android:layout_height="187dp"
        android:layout_marginStart="555dp"
        android:layout_marginLeft="555dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customWordsText"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/scrollLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/customWordLinear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord1"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord2"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord3"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord4"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord5"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord6"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord7"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord8"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord9"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customWordLinear10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customWordText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/deleteCustomWord10"
                    android:layout_width="94dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="13dp"
        android:onClick="saveButton"
        android:text="Save"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gameOptionsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gameOptionsTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/boardOptionsLinear"
        android:layout_width="173dp"
        android:layout_height="191dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boardOptionsText">

        <TextView
            android:id="@+id/bombSquaresText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bomb Squares" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/subtractBombsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/subtract" />

            <TextView
                android:id="@+id/bombSquareCount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="1" />

            <ImageView
                android:id="@+id/addBombsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

        <TextView
            android:id="@+id/neutralSquaresText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neutral Squares" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/subtractNeutralsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/subtract" />

            <TextView
                android:id="@+id/neutralSquareCount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="7" />

            <ImageView
                android:id="@+id/addNeutralsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

        <TextView
            android:id="@+id/squaresInUseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Squares in use" />

        <TextView
            android:id="@+id/squaresInUse"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="25/25"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teamOptionsLinear"
        android:layout_width="173dp"
        android:layout_height="191dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@+id/teamOptionsText"
        app:layout_constraintVertical_bias="0.533">

        <TextView
            android:id="@+id/teamASquaresText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team 1 Squares" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/teamASqrDec"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/subtract" />

            <TextView
                android:id="@+id/teamASquaresCount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="9" />

            <ImageView
                android:id="@+id/teamASqrInc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/add" />
        </LinearLayout>

        <TextView
            android:id="@+id/teamBSquaresText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team 2 Squares" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/teamBSqrDec"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/subtract" />

            <TextView
                android:id="@+id/teamBSquaresCount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="8" />

            <ImageView
                android:id="@+id/teamBSqrInc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/add" />
        </LinearLayout>

        <TextView
            android:id="@+id/startingTeamText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting team" />

        <ToggleButton
            android:id="@+id/startingTeamButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="ToggleButton"
            android:textOff="2"
            android:textOn="1" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/messageBox"
        android:layout_width="405dp"
        android:layout_height="205dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="6dp"
        android:background="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toStartOf="@+id/scrollView"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toEndOf="@+id/boardOptionsText"
        app:layout_constraintTop_toBottomOf="@+id/gameOptionsTitle"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/messageBoxText"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:fontFamily="@font/general_font"
            android:gravity="center|top"
            android:text="Default"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnSpan="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="saveOk"
            android:text="OK"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/yesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:onClick="backYes"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/noButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:onClick="backNo"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.swansea.codenames">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Codenames">
        <activity
            android:name=".start_screen"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main_menu"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".settings"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".colour_options"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".local_setup"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".online_setup"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".create_game"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".join_game"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".game_options"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".local_game"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".online_game"
            android:screenOrientation="sensorLandscape">
        </activity>
    </application>

</manifest>